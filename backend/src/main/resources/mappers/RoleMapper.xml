<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shareknowledge.api.mapper.RoleMapper">
    
    <!-- 역할 결과 매핑 -->
    <resultMap id="RoleResultMap" type="com.shareknowledge.api.model.Role">
        <id property="id" column="id" />
        <result property="name" column="name" typeHandler="org.apache.ibatis.type.EnumTypeHandler" />
    </resultMap>
    
    <!-- 전체 역할 조회 -->
    <select id="getAllRoles" resultMap="RoleResultMap">
        SELECT id, name
        FROM roles
        ORDER BY id
    </select>
    
    <!-- ID로 역할 조회 -->
    <select id="getRoleById" parameterType="int" resultMap="RoleResultMap">
        SELECT id, name
        FROM roles
        WHERE id = #{id}
    </select>
    
    <!-- 이름으로 역할 조회 -->
    <select id="getRoleByName" resultMap="RoleResultMap">
        SELECT id, name
        FROM roles
        WHERE name = #{name}
    </select>
    
    <!-- 사용자 ID에 따른 역할 조회 -->
    <select id="getRolesByUserId" parameterType="long" resultMap="RoleResultMap">
        SELECT r.id, r.name
        FROM roles r
        JOIN user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>
    
    <!-- 사용자-역할 연결 추가 -->
    <insert id="insertUserRole">
        INSERT INTO user_roles (user_id, role_id)
        VALUES (#{userId}, #{roleId})
    </insert>
    
    <!-- 사용자-역할 연결 삭제 -->
    <delete id="deleteUserRoles" parameterType="long">
        DELETE FROM user_roles
        WHERE user_id = #{userId}
    </delete>
    
    <!-- 사용자-특정 역할 연결 삭제 -->
    <delete id="deleteUserRole">
        DELETE FROM user_roles
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>
    
</mapper> 